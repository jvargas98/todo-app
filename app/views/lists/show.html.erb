<div class="container-fluid">
  <div class="row d-flex justify-content-center">
    <div class="col-10 col-md-6 col-lg-4 pt-5">
      <div class="card card-size-lg shadow bg-white rounded">
        <div class="card-header d-flex w-100">
          <div class="col-11 nopadding">
            <h3 class="h-100 nopadding d-flex align-items-center"><%= @list.name %> </h1>
          </div>
          <div class="btn-group dropright nopadding">
            <button type="button" class="btn" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
              <i class="fas fa-ellipsis-v"></i>
            </button>
            <div class="dropdown-menu">
              <%= link_to 'Show tasks', list_tasks_path(@list), class: "dropdown-item"  %>
              <%= link_to 'Edit', edit_list_path(@list), class: "dropdown-item" %>
              <%= link_to 'Destroy', @list, method: :delete, data: { confirm: 'Are you sure?' }, class: "dropdown-item" %>
            </div>
          </div>
        </div>
        <div class="card-body overflow-auto">
          <p><%= @list.description %></p>
        </div>
        <div class="d-flex flex-row-reverse">
          <%= link_to 'Show tasks', list_tasks_path(@list), class: "btn btn-link" %>
          <%= link_to 'Back', lists_path, class: "btn btn-link" %>
        </div>
      </div>
    </div>
  </div>
</div>
