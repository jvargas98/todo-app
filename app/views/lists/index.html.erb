<div class="container-fluid">
  <div class="row">
    <div class="w-100 d-flex flex-column align-items-center pt-4">
      <h1>Lists</h1>
      <div class="d-flex flex-wrap justify-content-around col-10">
        <% @lists.each do |list| %>
          <div class="card card-size-sm shadow bg-white rounded">
            <div class="card-header d-flex w-100">
              <div class="col-11 nopadding">
                <h5 class="h-100 nopadding d-flex align-items-center"><%= link_to "#{list.name}", list, class:"text-dark"%></h5>
              </div>
              <div class="btn-group dropright nopadding">
                <button type="button" class="btn" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                  <i class="fas fa-ellipsis-v"></i>
                </button>
                <div class="dropdown-menu">
                  <%= link_to 'Show', list, class: "dropdown-item"  %>
                  <%= link_to 'Edit', edit_list_path(list), class: "dropdown-item" %>
                  <%= link_to 'Destroy', list, method: :delete, data: { confirm: 'Are you sure?' }, class: "dropdown-item" %>
                </div>
              </div>
            </div>
            <div class="card-body overflow-auto">
              <p class="text-secondary"><%= list.description %></p>
            </div>
          </div>
        <% end %>
      </div>
      <div class="fixed-bottom d-flex justify-content-center mb-1">
        <%= link_to 'New list', new_list_path, class:"btn btn-primary w-50 rounded-10" %>
      </div>
    </div>
  </div>
</div>
